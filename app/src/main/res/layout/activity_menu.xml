<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"
        android:id="@+id/my_toolbar"/>
    <android.support.v4.widget.DrawerLayout

        android:id="@+id/drawer"
        android:layout_below="@id/my_toolbar"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="ir.geek.parvaneh.MenuActivity">
        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#f0f0f0"
            app:headerLayout="@layout/header"
            app:itemIconTint="@color/darkgray"
            app:itemTextColor="@color/darkgray"
            app:menu="@menu/drawermenu" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </RelativeLayout>
            </ScrollView>
        </android.support.design.widget.NavigationView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/menuGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:columnCount="2">

                    <Button
                        android:id="@+id/massage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/waist"
                        android:text="آموزش ماساژ"
                        android:layout_gravity="top"
                         />

                    <Button
                        android:id="@+id/sptest"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/clipboard"
                        android:text="آزمون های ورزشی"
                        android:layout_gravity="top"/>

                    <Button
                        android:id="@+id/spplan"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/exercisecycle"
                        android:text="برنامه ورزشی"
                        android:layout_gravity="top"/>

                    <Button
                        android:id="@+id/terminology"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/weigher"
                        android:text="اصطلاحات علمی در علوم ورزشی"
                        android:layout_gravity="top"/>

                    <Button
                        android:id="@+id/fdplan"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/fish"
                        android:text="برنامه تغذیه"
                        android:layout_gravity="top"/>

                    <Button
                        android:id="@+id/document"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/apple"
                        android:text="پرونده تخصصی تغذیه و فعالیت بدنی"
                        android:layout_gravity="top"/>

                    <Button
                        android:id="@+id/bodybld"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/handmuscle"
                        android:text="آموزش حرکات بدن سازی"
                        android:layout_gravity="top"/>

                    <Button
                        android:id="@+id/ability"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:drawableTop="@mipmap/medalion"
                        android:text="استعدادیابی"
                        android:layout_gravity="top"/>
                </GridLayout>
            </RelativeLayout>


        </ScrollView>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
