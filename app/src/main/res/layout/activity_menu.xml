<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ir.geek.parvaneh.MenuActivity"
    android:id="@+id/rl">

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:itemTextColor="@color/darkgray"
        app:itemIconTint="@color/darkgray"
        android:background="#e0e0e0"
        app:menu="@menu/drawermenu"

        ></android.support.design.widget.NavigationView>
    <Button
        android:id="@+id/document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/spplan"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="Button1"
        android:layout_below="@+id/document" />

    <Button
        android:id="@+id/fdplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"

        android:layout_below="@+id/spplan" />

    <Button
        android:id="@+id/ability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_below="@+id/fdplan"/>

    <Button
        android:id="@+id/sptest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_below="@+id/ability" />

    <Button
        android:id="@+id/terminology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_below="@+id/sptest" />

    <Button
        android:id="@+id/massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_below="@+id/terminology" />

    <Button
        android:id="@+id/bodybld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
/>
</android.support.v4.widget.DrawerLayout>
