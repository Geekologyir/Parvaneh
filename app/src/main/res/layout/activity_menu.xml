<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"
        android:id="@+id/my_toolbar"/>
    <android.support.v4.widget.DrawerLayout
        android:layout_below="@id/my_toolbar"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="ir.geek.parvaneh.MenuActivity">
        <android.support.design.widget.NavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#f0f0f0"
            app:headerLayout="@layout/header"
            app:itemIconTint="@color/darkgray"
            app:itemTextColor="@color/darkgray"
            app:menu="@menu/drawermenu" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </RelativeLayout>
            </ScrollView>
        </android.support.design.widget.NavigationView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/massage"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignLeft="@+id/terminology"
                    android:layout_alignStart="@+id/terminology"
                    android:layout_below="@+id/terminology"
                    android:drawableTop="@mipmap/waist"
                    android:text="آموزش ماساژ" />

                <Button
                    android:id="@+id/ability"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignLeft="@+id/fdplan"
                    android:layout_alignStart="@+id/fdplan"
                    android:layout_below="@+id/fdplan"
                    android:drawableTop="@mipmap/medalion"
                    android:text="استعدادیابی" />

                <Button
                    android:id="@+id/sptest"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignLeft="@+id/spplan"
                    android:layout_alignStart="@+id/spplan"
                    android:layout_below="@+id/spplan"
                    android:drawableTop="@mipmap/clipboard"
                    android:text="آزمون های ورزشی" />

                <Button
                    android:id="@+id/spplan"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignLeft="@+id/document"
                    android:layout_alignStart="@+id/document"
                    android:layout_below="@+id/document"
                    android:drawableTop="@mipmap/exercisecycle"
                    android:text="برنامه ورزشی" />

                <Button
                    android:id="@+id/terminology"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignLeft="@+id/ability"
                    android:layout_alignStart="@+id/ability"
                    android:layout_below="@+id/ability"
                    android:drawableTop="@mipmap/weigher"
                    android:text="اصطلاحات علمی در علوم ورزشی" />

                <Button
                    android:id="@+id/fdplan"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignTop="@+id/document"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/bodybld"
                    android:layout_toRightOf="@+id/bodybld"
                    android:drawableTop="@mipmap/fish"
                    android:text="برنامه تغذیه" />

                <Button
                    android:id="@+id/document"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignLeft="@+id/bodybld"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/bodybld"
                    android:layout_marginTop="32dp"
                    android:drawableTop="@mipmap/apple"
                    android:text="پرونده تخصصی تغذیه و فعالیت بدنی" />

                <Button
                    android:id="@+id/bodybld"
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/sptest"
                    android:layout_marginLeft="64dp"
                    android:layout_marginStart="64dp"
                    android:drawableTop="@mipmap/handmuscle"
                    android:text="آموزش حرکات بدن سازی" />
            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
