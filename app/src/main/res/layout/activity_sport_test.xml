<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context="ir.geek.parvaneh.SportTestsActivity"
    >

    <include
        layout="@layout/navigation_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mdtp_background_color"
        android:layoutDirection="rtl">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbar" />

        <TextView
            android:id="@+id/txttest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تست هوازی"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_below="@id/my_toolbar"
            android:padding="5dp"
            android:layout_marginRight= "30dp"/>

        <RelativeLayout
            android:id="@+id/relvideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@id/txttest">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_description"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:text="آسان"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer"
                android:layout_marginRight="85dp"/>

            <TextView
                android:id="@+id/txtvideotime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="110dp"
                android:text="120 دقیقه"
                android:textSize="15dp" />


        </RelativeLayout>

        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relvideo"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video"
            android:text="تمرین هوازی (ایروبیک) (به انگلیسی: Aerobic exercise) نوعی فعالیت ورزشی بوده که هدف آن بهبود سیستم مصرف اکسیژن می‌باشد. هوازی ترجمه واژه ایروبیک (Aerobic) می‌باشد که به معنی با اکسیژن بوده و به نیاز به اکسیژن در سوخت و ساز بدن و فرایند تولید انرژی اشاره دارد. تمرین‌های هوازی بسیاری وجود دارند که با شدتی ملایم و بصورت مداوم انجام می‌شوند."
            android:textSize="20dp" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
