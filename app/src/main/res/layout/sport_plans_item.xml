<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="200dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/block_bg"
        android:elevation="2dp"
        android:layoutDirection="rtl">

        <RelativeLayout
            android:id="@+id/sp_item_header"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="برنامه ورزشی"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/edit"
                android:textColor="@color/blue_grey"
                android:textSize="16sp"
                android:id="@+id/editBtn"/>
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/sp_item_header"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/sp_item_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/divider"
            android:padding="15dp">

            <TextView
                android:id="@+id/sp_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="امروز، ساعت ۱۷"
                android:textColor="@color/blue_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sp_item_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sp_item_time"
                android:text="هوازی، دو، شنا"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/duration_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/sp_item_subject"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_timer" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sp_item_subject"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/duration_icon"
                android:text="۴۰ دقیقه"
                android:textColor="@color/blue_grey"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>