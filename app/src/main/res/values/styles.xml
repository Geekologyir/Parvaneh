<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="PrimaryBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="SecondaryBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/light_btn</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
